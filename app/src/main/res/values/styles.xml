<resources>

  <style name="AppTheme"
      parent="AppTheme.Base"/>

  <!-- the theme applied to the application or activity -->
  <style name="AppTheme.Base"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:textColorSecondary">@color/secondary_text</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="MyButton">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:padding">@dimen/spacing_minor</item>
    <item name="android:minWidth">@dimen/button_width</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_marginTop">@dimen/spacing_minor</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="CapstoneButton"
      parent="MyButton">
    <item name="android:background">@drawable/green_button</item>
  </style>

  <style name="OtherButton"
      parent="MyButton">
    <item name="android:background">@drawable/yellow_button</item>
  </style>
</resources>
